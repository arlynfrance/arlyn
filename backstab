-- Services
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local lp = Players.LocalPlayer

-- Load ESP library
local ESPLibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/Exunys/Exunys-ESP/main/src/ESP.lua"))()

-- ScreenGui setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ESPControlGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = lp:WaitForChild("PlayerGui")

-- Draggable frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 240, 0, 160)
mainFrame.Position = UDim2.new(0.4, 0, 0.3, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
mainFrame.BorderColor3 = Color3.fromRGB(90, 90, 90)
mainFrame.BorderSizePixel = 2
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Title bar
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "ESP Controls"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 18
title.Parent = mainFrame

-- ESP toggle button
local espButton = Instance.new("TextButton")
espButton.Size = UDim2.new(0, 220, 0, 40) -- Resized to fit GUI
espButton.Position = UDim2.new(0, 10, 0, 40)
espButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
espButton.BorderColor3 = Color3.fromRGB(90, 90, 90)
espButton.Text = "ESP: OFF"
espButton.TextColor3 = Color3.fromRGB(255, 255, 255)
espButton.Font = Enum.Font.SourceSansBold
espButton.TextSize = 16
espButton.Parent = mainFrame

local espEnabled = false

espButton.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    if espEnabled then
        ESPLibrary:Load()
        espButton.Text = "ESP: ON"
        espButton.BackgroundColor3 = Color3.fromRGB(60, 120, 60)
    else
        ESPLibrary.Unload()
        espButton.Text = "ESP: OFF"
        espButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    end
end)

-- Slider for ESP range
local sliderFrame = Instance.new("Frame")
sliderFrame.Size = UDim2.new(0, 220, 0, 20)
sliderFrame.Position = UDim2.new(0, 10, 0, 100)
sliderFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
sliderFrame.BorderColor3 = Color3.fromRGB(90, 90, 90)
sliderFrame.Parent = mainFrame

local sliderButton = Instance.new("TextButton")
sliderButton.Size = UDim2.new(0, 20, 1, 0)
sliderButton.BackgroundColor3 = Color3.fromRGB(90, 90, 90)
sliderButton.BorderSizePixel = 0
sliderButton.Text = ""
sliderButton.Parent = sliderFrame

local dragging = false
local minValue, maxValue = 0, 500 -- Slider range
local currentValue = 250 -- Default value

sliderButton.MouseButton1Down:Connect(function()
    dragging = true
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

game:GetService("RunService").RenderStepped:Connect(function()
    if dragging then
        local mousePos = UserInputService:GetMouseLocation().X
        local frameStart = sliderFrame.AbsolutePosition.X
        local frameEnd = frameStart + sliderFrame.AbsoluteSize.X
        local newX = math.clamp(mousePos - frameStart, 0, sliderFrame.AbsoluteSize.X)
        sliderButton.Position = UDim2.new(0, newX, 0, 0)

        local percent = newX / sliderFrame.AbsoluteSize.X
        currentValue = math.floor(minValue + (maxValue - minValue) * percent)
        -- Removed number display, but still updates value
    end
end)

-- RightShift toggle GUI
local guiVisible = true
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.RightShift then
        guiVisible = not guiVisible
        mainFrame.Visible = guiVisible
    end
end)
